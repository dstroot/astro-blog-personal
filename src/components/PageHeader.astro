---
// import { cn } from '@/utils'

export interface Props {
  title: string
  description?: string | null
}

const { title, description } = Astro.props
---

<div class="mb-6 w-full md:mb-12">
  <h1
    class="mb-2 text-balance text-center text-4xl font-bold leading-tight tracking-tighter md:mb-4 md:text-left md:text-6xl md:leading-none lg:text-7xl"
  >
    {title}
  </h1>
  {
    description && (
      <h2 class="text-muted-foreground text-balance text-center text-xl md:text-left md:text-2xl">
        {description}
      </h2>
    )
  }
</div>
