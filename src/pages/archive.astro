---
import BaseLayout from '../layouts/BaseLayout.astro'
import { getPosts } from '@/utils'
import { siteConfig } from '@/site-config'
import ArchiveList from '@/components/ArchiveList'

const MAX_POSTS = 999 // max number of posts to show on the home page
const posts = await getPosts(MAX_POSTS)
---

<BaseLayout title="Archive">
  <main>
    <section class="mb-8 md:mb-12">
      <div
        class="mt-20 flex flex-col items-center md:flex-row md:justify-between"
      >
        <h1
          class="text-4xl font-bold leading-tight tracking-tighter md:text-6xl lg:text-7xl"
        >
          {siteConfig.title}
        </h1>
        <div class="mt-2 text-2xl font-semibold italic md:text-2xl lg:text-3xl">
          {siteConfig.description}
        </div>
      </div>
    </section>
    <ArchiveList posts={posts} />
  </main>
</BaseLayout>
