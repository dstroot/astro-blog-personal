---
import BaseLayout from '@/layouts/BaseLayout'
import { getCollection } from 'astro:content'
import { siteConfig } from '@/site-config'

const snippets = await getCollection('snippets')
---

<BaseLayout title="Welcome to Astro.">
  <main>
    <section class="mb-8 md:mb-12">
      <div
        class="mt-20 flex flex-col items-center md:flex-row md:justify-between"
      >
        <h1
          class="text-4xl font-bold leading-tight tracking-tighter md:text-6xl lg:text-7xl"
        >
          {siteConfig.title}
        </h1>
        <div class="mt-2 text-2xl font-semibold italic md:text-2xl lg:text-3xl">
          {siteConfig.description}
        </div>
      </div>
    </section>
    <!-- <ListPosts FirstBig={true} posts={posts} /> -->
    {
      snippets.map(async (snippet) => {
        return <a href={`/snippets/${snippet.slug}`}>{snippet.data.title}</a>
      })
    }
  </main>
</BaseLayout>
