---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getPosts } from '@/utils'
import { siteConfig } from '@/site-config'
import ListPosts from '@/components/ListPosts'

const MAX_POSTS = 9 // max number of posts to show on the home page
const posts = await getPosts(MAX_POSTS)
---

<BaseLayout title="Welcome to Astro.">
	<main>
		<section class="mb-8 md:mb-12">
      <div class="flex flex-col items-center md:flex-row md:justify-between mt-12">
        <h1 class="text-4xl font-bold leading-tight tracking-tighter md:text-6xl lg:text-7xl">
          {siteConfig.title}
        </h1>
        <div class="mt-2 text-2xl font-semibold italic md:text-2xl lg:text-3xl">
          {siteConfig.description}
        </div>
      </div>
    </section>
		<ListPosts FirstBig={true} posts={posts} />
	</main>
</BaseLayout>

